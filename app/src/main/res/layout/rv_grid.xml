<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="15dp"
    app:cardCornerRadius="6dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:padding="6dp"
        android:layout_height="wrap_content">


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/gambarPelajaran2"
            android:layout_width="150dp"
            android:layout_height="77dp"
            android:background="@drawable/background"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/pict3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/namaPelajaran2"
            android:layout_width="0dp"
            android:textColor="@color/black"
            android:fontFamily="@font/quicksand_bold"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            android:text="Matematika"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/gambarPelajaran2"
            app:layout_constraintStart_toStartOf="@+id/gambarPelajaran2"
            app:layout_constraintTop_toBottomOf="@+id/gambarPelajaran2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/namaPelajaran2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingRight="10dp"
            android:background="@drawable/background"
            android:paddingLeft="10dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/see2"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/see"/>

            <TextView
                android:id="@+id/txt_see2"
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:fontFamily="@font/quicksand_medium"
                android:text="Tonton"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:background="@drawable/background"
            android:paddingLeft="10dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/download2"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/download"/>
            <TextView
                android:id="@+id/txt_download2"
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:fontFamily="@font/quicksand_medium"
                android:text="Download"/>

        </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>