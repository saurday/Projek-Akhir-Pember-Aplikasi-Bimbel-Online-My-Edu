<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_marginEnd="10dp"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/gambarPelajaran1"
            android:layout_width="76dp"
            android:layout_height="56dp"
            android:layout_margin="10dp"
            android:src="@drawable/pict2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/namaPelajaran1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/quicksand_bold"
            android:text="Kimia"
            android:paddingEnd="10dp"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/gambarPelajaran1"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/see1"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="13dp"
            android:src="@drawable/see"
            app:layout_constraintStart_toEndOf="@+id/gambarPelajaran1"
            app:layout_constraintTop_toBottomOf="@+id/namaPelajaran1" />

        <TextView
            android:id="@+id/txt_see1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:fontFamily="@font/quicksand"
            android:text="Tonton"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/see1"
            app:layout_constraintStart_toEndOf="@+id/see1"
            app:layout_constraintTop_toBottomOf="@+id/namaPelajaran1"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/download1"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/download"
            app:layout_constraintEnd_toEndOf="@+id/see1"
            app:layout_constraintTop_toBottomOf="@+id/see1" />

        <TextView
            android:id="@+id/txt_download1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/quicksand"
            android:paddingEnd="10dp"
            android:text="Download"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@+id/download1"
            app:layout_constraintStart_toStartOf="@+id/txt_see1"
            app:layout_constraintTop_toBottomOf="@+id/txt_see1" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>